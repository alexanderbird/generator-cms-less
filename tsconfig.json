{
  "unusedCompilerOptions": {
    "noImplicitThis": true,
    "noImplicitAny": true,
    ".": true
  },
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "src/build/**/*"
  ],
  "compileOnSave": false
}
